<div class="row">
  <div class="col s-6">
    <h3 class="center-align">Active Students </h3>
  </div>

</div>

<div class="row">
  <% @students.each do |student|  %>
    <% if student.courses.count>0 %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= student.name%>
            <% if student.is_mentor? %>
            <%='<i class="material-icons right icon-yellow">gps_fixed</i>'.html_safe %>
          <% end %>
        </span>
          <p><a href="mailto:<%= student.email %>"><%= student.email%></a></p>
          <% if student.role!=nil && student.role!='' %>
            <p><%=student.role%> @ <%=student.domain%>::<%=student.team%></p>
          <% else %>
           <p>NoRole @ NoDomain::NoTeam</p>
          <% end %>
          
          <ul><u>Enroled Courses</u>
            <% student.courses.each do |course| %>
            <li> - <%= course.name %></li>
            <% end %>
          </ul>
        </div>
        <div class="card-action">
          <%= link_to "View Profile", student_path(student) %>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>