<div class="row  sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name%></span>
        <p>Email: <%= @student.email%></p>
        <p>Since: <%=@student.created_at %></p>
        <br>
        <p class="underline">Course Enrolments: 
          <% if @student.courses.empty? %>
            None
          <% else %> 
          <ul>
            <% @student.courses.each do |course| %>
             <li> - <%= course.name %> <%=link_to '<i class="material-icons red-text">remove_circle</i>'.html_safe, course_drop_path(course_id: course.id), class: "material-icons", method: :delete %></li>
            <% end %>
          </ul>
          <%end %>
        </p>
      </div>
    </div>
    <% if current_user == @student %>
     <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student),class: "waves-effect waves-light btn-large" %>
    <% end %>
  </div>
</div>