<div class="row">
  <div class="col s-6">
    <h3 class="center-align">Mentors </h3>
  </div>

</div>

<div class="row">
  <% @students.each do |student|  %>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= student.name%>
          <% if student.is_mentor? %>
          <%='<i class="material-icons right icon-yellow">gps_fixed</i>'.html_safe %>
        <% end %>
      </span>
        <p><a href="mailto:<%= student.email %>"><%= student.email%></a></p>
        <p>Since: <%=student.created_at %></p>
        <% if student.role!=nil && student.role!='' %>
          <p><%=student.role%> at <%=student.domain%>::<%=student.team%></p>
        <% else %>
          <br>
        <% end %>
        <p>Course Enrolments: None</p>
      </div>
      <div class="card-action">
        <%= link_to "View Profile", student_path(student) %>
      </div>
    </div>
  </div>
  <% end %>
</div>